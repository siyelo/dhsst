    :javascript
      //Styling the main menu
      $('#main-menu > li').hover(
      	function () {
      		//show its submenu
      		if (!$('ul', this).hasClass('open')) {
      			$('ul', this).addClass('open');
      			$('ul', this).show();
      		}
	 
      	}, 
      	function () {
      		var self = this;
      		//hide its submenu
      		$('ul', this).slideUp(10, function(){
      			$('ul', self).removeClass('open');
      		});	
      	}
      );